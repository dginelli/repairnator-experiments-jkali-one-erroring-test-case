<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
    default-init-method="init"
    default-destroy-method="destroy">


    <bean id="fromBeanMessage" class="anton.potemkin.spring.message.Message">
        <property name="message" value="This is message from simple bean."/>
    </bean>

    <bean id="BeanMessageSingleton" class="anton.potemkin.spring.message.Message" scope="singleton">
    </bean>

    <bean id="BeanMessagePrototype" class="anton.potemkin.spring.message.Message" scope="prototype">
    </bean>

</beans>