<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran Configuration 5.0//EN"
                           "http://aspectran.github.io/dtd/aspectran-5.dtd">

<aspectran>

    <description>
        Simple program to demonstrate the use of the FreeTTS speech synthesizer.
    </description>

    <bean id="speaker" class="com.aspectran.demo.speak.SpeakerBean">
        <properties>
            <item name="voiceName">kevin16</item>
        </properties>
    </bean>

    <translet name="speak${text}">
        <description style="apon">
            |   To call this translet, type "speak [TEXT]".
            |   If your system's audio works well, it will speak the text you type.
        </description>
        <action bean="speaker" method="speak">
            <arguments>
                <item>${text:Hello}</item>
            </arguments>
        </action>
    </translet>

</aspectran>