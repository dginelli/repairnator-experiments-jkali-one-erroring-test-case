<?xml version="1.0" encoding="utf-8"?>
<configuration scan="true">
	<!--jmxConfigurator/-->
	
	<property name="utc-time-pattern" value="%d{HH:mm:ss.SSS,UTC}"/>
	<property name="utc-date-pattern" value="%d{yyyy-MM-dd,UTC}"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->   
        <encoder>
            <pattern>[${HOSTNAME} %X{pid} %X{module}] ${utc-time-pattern} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>logs/gestionnaire-clients.log</File>
        <prudent>true</prudent>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/gestionnaire-clients.${utc-date-pattern}.log</fileNamePattern>
            
            <!-- 30 days of max history and up to 1GB of data -->
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>[${HOSTNAME}] ${utc-time-pattern} [%thread] %-5level - %logger{36} - %msg%n</pattern>
        </layout>
    </appender>
		
    <!-- Specify logging levels -->
    <logger name="log4j.logger.org.springframework" level="OFF" />
    <logger name="org.springframework" level="OFF" />
    <logger name="org.springframework.core" level="OFF" />
    <logger name="ch.qos.logback" level="OFF" />
     
    <!--logger name="morpho.msb.logger.BusinessLogger" additivity="false" level="ALL">
        <appender-ref ref="BUSINESS_REPORT_FILE" />
        <appender-ref ref="BUSINESS_REPORT_SCRIBE" />
	</logger-->		

    <root level="INFO">
        <appender-ref ref="FILE" />
        <appender-ref ref="STDOUT" />
    </root>
</configuration>