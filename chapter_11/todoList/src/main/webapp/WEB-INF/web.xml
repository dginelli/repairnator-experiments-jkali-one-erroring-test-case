<web-app>

    <servlet>
        <servlet-name>ItemController</servlet-name>
        <servlet-class>ru.job4j.controllers.ItemController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ItemController</servlet-name>
        <url-pattern>/items</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddItem</servlet-name>
        <servlet-class>ru.job4j.controllers.AddItem</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddItem</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateItem</servlet-name>
        <servlet-class>ru.job4j.controllers.UpdateItem</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateItem</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
