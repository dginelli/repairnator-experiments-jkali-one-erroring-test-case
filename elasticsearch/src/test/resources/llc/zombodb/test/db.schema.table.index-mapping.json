{
  "mappings": {
    "data": {
      "_source": {
        "enabled": false
      },
      "_all": {
        "enabled": true,
        "analyzer": "phrase"
      },
      "_field_names": {
        "enabled": false,
        "type": "_field_names"
      },
      "_parent": {
        "type": "xact"
      },
      "_meta": {
        "primary_key": "id"
      },
      "date_detection": false,
      "properties": {
        "id": {
          "store": false,
          "type": "long",
          "store": "true",
          "include_in_all": "false",
          "index": "not_analyzed"
        },
        "null_field": {
          "store": false,
          "type": "string",
          "index_options": "docs",
          "analyzer": "exact"
        },
        "exact_field": {
          "store": false,
          "type": "string",
          "index_options": "docs",
          "analyzer": "exact"
        },
        "phrase_field": {
          "store": false,
          "type": "string",
          "index_options": "positions",
          "analyzer": "phrase",
          "fielddata": {
            "format": "paged_bytes"
          }
        },
        "czech_field": {
          "store": false,
          "type": "string",
          "index_options": "positions",
          "analyzer": "czech",
          "fielddata": {
            "format": "paged_bytes"
          }
        },
        "fulltext_field": {
          "store": false,
          "type": "string",
          "index_options": "positions",
          "include_in_all": "false",
          "analyzer": "fulltext",
          "fielddata": {
            "format": "disabled"
          }
        },
        "shingle_field": {
          "store": false,
          "type": "string",
          "index_options": "positions",
          "include_in_all": "true",
          "analyzer": "fulltext_with_shingles",
          "search_analyzer": "fulltext_with_shingles_search",
          "fielddata": {
            "format": "disabled"
          }
        },
        "english_field": {
          "store": false,
          "type": "string",
          "index_options": "positions",
          "include_in_all": "true",
          "analyzer": "english",
          "fielddata": {
            "format": "disabled"
          }
        },
        "date_field": {
          "store": false,
          "type": "string",
          "index": "not_analyzed",
          "fielddata": {
            "format": "doc_values"
          },
          "fields": {
            "date": {
              "type": "date",
              "index": "not_analyzed"
            }
          }
        },
        "unanalyzed_field": {
          "type": "string",
          "index": "not_analyzed"
        }
      }
    }
  },
  "settings": {
    "refresh_interval": -1,
    "number_of_shards": 5,
    "number_of_replicas": 0,
    "analysis": {
      "filter": {
        "truncate_32000": {
          "type": "truncate",
          "length": 32000
        },
        "shingle_filter": {
          "type": "shingle",
          "min_shingle_size": 2,
          "max_shingle_size": 2,
          "output_unigrams": true,
          "token_separator": "$"
        },
        "shingle_filter_search": {
          "type": "shingle",
          "min_shingle_size": 2,
          "max_shingle_size": 2,
          "output_unigrams": false,
          "token_separator": "$"
        }
      },
      "analyzer": {
        "default": {
          "tokenizer": "keyword",
          "filter": [
            "truncate_32000",
            "lowercase"
          ]
        },
        "exact": {
          "tokenizer": "keyword",
          "filter": [
            "truncate_32000",
            "lowercase"
          ]
        },
        "phrase": {
          "tokenizer": "standard",
          "filter": [
            "lowercase"
          ]
        },
        "fulltext": {
          "tokenizer": "standard",
          "filter": [
            "lowercase"
          ]
        },
        "fulltext_with_shingles": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "shingle_filter"
          ]
        },
        "fulltext_with_shingles_search": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "shingle_filter_search"
          ]
        }
    }
    }
  }
}
